<div class="card">
  <div class="card-body">
    <h5 class="card-title">Card with {{@resource}}</h5>
    <p class="card-text">
      {{#if @metric}}
       Metric: {{@metric}}
      {{else}}
        {{defaultMsg}}
      {{/if}}
    </p>
    <p>number of wins: {{@winCounter}} </p>
    {{#if @isWin}}
      <span class="badge badge-primary">Win !</span>
    {{/if}}
  </div>
</div>
{{yield}}